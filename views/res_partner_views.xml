<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_vehicle_button" model="ir.ui.view">
        <field name="name">res.partner.form.vehicle.smart.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_vehicles"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-car">
                    <field name="vehicle_ids" widget="statinfo" string="Vehicles"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>