<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vehicle form view -->
        <record id="view_vehicle_form" model="ir.ui.view">
            <field name="name">vehicle.view</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <form string="Vehicles">
                    <group>
                        <field name="vehicle_name"/>
                        <field name="registration_number"/>
                        <field name="model"/>
                        <field name="registration_year"/>
                        <field name="colour"/>
                        <field name="owner_id"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Vehicle list view -->
        <record id="view_vehicle_list" model="ir.ui.view">
            <field name="name">vehicle.view</field>
            <field name="model">vehicle.management</field>
            <field name="arch" type="xml">
                <list string="Vehicles">
                    <field name="vehicle_name"/>
                    <field name="registration_number"/>
                    <field name="model"/>
                    <field name="owner_id"/>
                </list>
            </field>
        </record>

        <record id="action_vehicle_management" model="ir.actions.act_window">
            <field name="name">Vehicles</field>
            <field name="res_model">vehicle.management</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_vehicle_root" name="Vehicles" parent="sale.sale_menu_root" sequence="35"/>
        <menuitem id="menu_vehicle" name="Vehicles" parent="menu_vehicle_root" action="action_vehicle_management"/>

    </data>
</odoo>